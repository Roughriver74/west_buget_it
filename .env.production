# ==============================================
# Production Environment Configuration
# ==============================================
# IMPORTANT: Fill in all required values before deployment!

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=it_budget_db
DB_USER=budget_user
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# Security (CRITICAL - MUST CHANGE!)
SECRET_KEY=CHANGE_ME_TO_RANDOM_STRING_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
DEBUG=False
APP_NAME=IT Budget Manager
APP_VERSION=0.5.0
API_PREFIX=/api/v1

# CORS - Add your domain
CORS_ORIGINS=["https://budget-west.shknv.ru","https://www.budget-west.shknv.ru"]

# Ports (external ports on host)
FRONTEND_PORT=3001
BACKEND_PORT=8888
DB_PORT=54329

# Frontend API URL
# Use /api to let nginx proxy to backend (avoids mixed content errors)
VITE_API_URL=/api

# Redis (Optional)
REDIS_URL=redis://redis:6379

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Docker settings
COMPOSE_PROJECT_NAME=it-budget-prod
