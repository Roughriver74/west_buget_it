{
  "entity": "budget_plan_details",
  "display_name": {
    "ru": "Детализация бюджета",
    "en": "Budget Plan Details"
  },
  "description": {
    "ru": "Детальное планирование бюджета с версионированием",
    "en": "Detailed budget planning with versioning"
  },
  "fields": [
    {
      "name": "version_id",
      "display_name": {
        "ru": "ID версии",
        "en": "Version ID"
      },
      "type": "integer",
      "required": true,
      "min": 1,
      "aliases": ["версия", "version"]
    },
    {
      "name": "category_name",
      "display_name": {
        "ru": "Категория",
        "en": "Category"
      },
      "type": "string",
      "required": true,
      "lookup_entity": "budget_categories",
      "lookup_field": "name",
      "auto_create": false,
      "aliases": ["категория", "category", "статья"]
    },
    {
      "name": "month",
      "display_name": {
        "ru": "Месяц",
        "en": "Month"
      },
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 12,
      "aliases": ["месяц", "period_month"]
    },
    {
      "name": "planned_amount",
      "display_name": {
        "ru": "Плановая сумма",
        "en": "Planned Amount"
      },
      "type": "decimal",
      "required": true,
      "min": 0,
      "aliases": ["план", "planned", "бюджет", "budget"]
    },
    {
      "name": "notes",
      "display_name": {
        "ru": "Примечания",
        "en": "Notes"
      },
      "type": "string",
      "required": false,
      "max_length": 1000,
      "aliases": ["примечания", "комментарий", "comment", "description"]
    }
  ],
  "validation_rules": {
    "unique_fields": ["version_id", "category_name", "month"]
  },
  "import_options": {
    "allow_update": true,
    "update_key": ["version_id", "category_name", "month"],
    "batch_size": 100,
    "auto_create_related": false
  }
}
