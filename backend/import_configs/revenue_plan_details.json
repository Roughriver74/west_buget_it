      "type": "decimal",
      "required": true,
      "min": 0,
      "aliases": ["план", "planned", "прогноз", "forecast"]
    },
    {
      "name": "probability",
      "display_name": {
        "ru": "Вероятность",
        "en": "Probability"
      },
      "type": "decimal",
      "required": false,
      "min": 0,
      "max": 100,
      "aliases": ["вероятность", "уверенность", "confidence"]
    },
    {
      "name": "notes",
      "display_name": {
        "ru": "Примечания",
        "en": "Notes"
      },
      "type": "string",
      "required": false,
      "max_length": 1000,
      "aliases": ["примечания", "комментарий", "comment", "description"]
    }
  ],
  "validation_rules": {},
  "import_options": {
    "allow_update": true,
    "update_key": ["version_id", "month", "revenue_stream_name", "revenue_category_name"],
    "batch_size": 100,
    "auto_create_related": false
