{
  "entity": "payroll_plans",
  "display_name": {
    "ru": "План ФОТ",
    "en": "Payroll Plans"
  },
  "description": {
    "ru": "Планирование фонда оплаты труда",
    "en": "Payroll planning and budgeting"
  },
  "fields": [
    {
      "name": "year",
      "display_name": {
        "ru": "Год",
        "en": "Year"
      },
      "type": "integer",
      "required": true,
      "min": 2020,
      "max": 2100,
      "aliases": ["год", "period_year"]
    },
    {
      "name": "month",
      "display_name": {
        "ru": "Месяц",
        "en": "Month"
      },
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 12,
      "aliases": ["месяц", "period_month"]
    },
    {
      "name": "employee_name",
      "display_name": {
        "ru": "Сотрудник",
        "en": "Employee"
      },
      "type": "string",
      "required": true,
      "lookup_entity": "employees",
      "lookup_field": "full_name",
      "auto_create": false,
      "aliases": ["сотрудник", "фио", "employee", "full_name"]
    },
    {
      "name": "base_salary",
      "display_name": {
        "ru": "Оклад",
        "en": "Base Salary"
      },
      "type": "decimal",
      "required": true,
      "min": 0,
      "aliases": ["оклад", "базовая_зарплата", "salary"]
    },
    {
      "name": "bonus_type",
      "display_name": {
        "ru": "Тип премии",
        "en": "Bonus Type"
      },
      "type": "enum",
      "required": false,
      "enum": ["FIXED", "PERFORMANCE_BASED", "MIXED"],
      "default": "FIXED",
      "aliases": ["тип_премии", "вид_премии", "bonus_kind"]
    },
    {
      "name": "bonus_amount",
      "display_name": {
        "ru": "Сумма премии",
        "en": "Bonus Amount"
      },
      "type": "decimal",
      "required": false,
      "min": 0,
      "default": 0,
      "aliases": ["премия", "бонус", "bonus"]
    },
    {
      "name": "social_contributions",
      "display_name": {
        "ru": "Соц. отчисления",
        "en": "Social Contributions"
      },
      "type": "decimal",
      "required": false,
      "min": 0,
      "default": 0,
      "aliases": ["соц_отчисления", "взносы", "contributions", "налоги"]
    },
    {
      "name": "notes",
      "display_name": {
        "ru": "Примечания",
        "en": "Notes"
      },
      "type": "string",
      "required": false,
      "max_length": 500,
      "aliases": ["примечания", "комментарий", "comment", "description"]
    }
  ],
  "validation_rules": {
    "unique_fields": ["year", "month", "employee_name"]
  },
  "import_options": {
    "allow_update": true,
    "update_key": ["year", "month", "employee_name"],
    "batch_size": 100,
    "auto_create_related": false,
    "calculated_fields": {
      "total_cost": "base_salary + bonus_amount + social_contributions"
    }
  }
}
