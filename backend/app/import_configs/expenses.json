{
  "entity": "expenses",
  "display_name": {
    "ru": "Расходы",
    "en": "Expenses"
  },
  "description": {
    "ru": "Журнал расходов и заявок на оплату",
    "en": "Expense tracking and payment requests"
  },
  "fields": [
    {
      "name": "amount",
      "display_name": {
        "ru": "Сумма",
        "en": "Amount"
      },
      "type": "decimal",
      "required": true,
      "min": 0,
      "aliases": ["сумма", "стоимость", "цена", "price", "cost"]
    },
    {
      "name": "category_name",
      "display_name": {
        "ru": "Категория",
        "en": "Category"
      },
      "type": "string",
      "required": true,
      "lookup_entity": "budget_categories",
      "lookup_field": "name",
      "auto_create": true,
      "aliases": ["категория", "category", "статья", "тип_расхода"]
    },
    {
      "name": "contractor_name",
      "display_name": {
        "ru": "Контрагент",
        "en": "Contractor"
      },
      "type": "string",
      "required": true,
      "lookup_entity": "contractors",
      "lookup_field": "name",
      "auto_create": true,
      "aliases": ["контрагент", "поставщик", "contractor", "vendor", "supplier"]
    },
    {
      "name": "organization_name",
      "display_name": {
        "ru": "Организация",
        "en": "Organization"
      },
      "type": "string",
      "required": true,
      "lookup_entity": "organizations",
      "lookup_field": "name",
      "auto_create": true,
      "aliases": ["организация", "organization", "компания", "company"]
    },
    {
      "name": "description",
      "display_name": {
        "ru": "Описание",
        "en": "Description"
      },
      "type": "string",
      "required": true,
      "min_length": 1,
      "max_length": 1000,
      "aliases": ["описание", "назначение", "comment", "комментарий"]
    },
    {
      "name": "request_date",
      "display_name": {
        "ru": "Дата заявки",
        "en": "Request Date"
      },
      "type": "date",
      "required": true,
      "aliases": ["дата_заявки", "дата_запроса", "дата", "date"]
    },
    {
      "name": "payment_date",
      "display_name": {
        "ru": "Дата оплаты",
        "en": "Payment Date"
      },
      "type": "date",
      "required": false,
      "aliases": ["дата_оплаты", "оплачено", "paid_date"]
    },
    {
      "name": "status",
      "display_name": {
        "ru": "Статус",
        "en": "Status"
      },
      "type": "enum",
      "required": false,
      "enum": ["DRAFT", "PENDING", "APPROVED", "REJECTED", "PAID", "CANCELLED"],
      "default": "DRAFT",
      "aliases": ["статус", "состояние", "state"]
    },
    {
      "name": "invoice_number",
      "display_name": {
        "ru": "Номер счета",
        "en": "Invoice Number"
      },
      "type": "string",
      "required": false,
      "max_length": 100,
      "aliases": ["номер_счета", "счет", "invoice", "инвойс"]
    }
  ],
  "validation_rules": {},
  "import_options": {
    "allow_update": false,
    "batch_size": 100,
    "auto_create_related": true
  }
}
