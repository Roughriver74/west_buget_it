# ============================================
# IT Budget Manager - Production Environment
# ============================================
#
# Copy this file to .env and fill in the values
# IMPORTANT: Never commit .env file to git!
#

# ============================================
# Database Configuration
# ============================================
DB_USER=budget_user
DB_PASSWORD=CHANGE_ME_strong_password_here
DB_NAME=it_budget_db
DB_PORT=54329

# ============================================
# Backend Configuration
# ============================================

# Security - REQUIRED
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_minimum_32_characters_random_string_here

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin User - REQUIRED (auto-created on first deployment)
# IMPORTANT: Change password from default!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_strong_admin_password
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_FULL_NAME=System Administrator

# CORS Origins - Comma-separated list
# Example: '["https://yourdomain.com","https://www.yourdomain.com"]'
CORS_ORIGINS='["http://dswcw4wc4os44gs0ww4kg48w.93.189.228.52.sslip.io"]'

# Application
APP_NAME="IT Budget Manager"
APP_VERSION="0.5.0"
API_PREFIX=/api/v1
DEBUG=False

# ============================================
# Frontend Configuration
# ============================================

# Backend API URL (for frontend build)
VITE_API_URL=http://localhost:8888

# ============================================
# Ports Configuration
# ============================================
BACKEND_PORT=8888
FRONTEND_PORT=3001

# ============================================
# Monitoring & Logging (Optional)
# ============================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Prometheus metrics
PROMETHEUS_ENABLED=true

# ============================================
# Redis Configuration (Optional)
# ============================================
# Used for rate limiting and caching
REDIS_URL=redis://redis:6379

# ============================================
# Production Deployment Notes
# ============================================
#
# 1. SECURITY:
#    - Change SECRET_KEY to a strong random value (min 32 chars)
#    - Use strong DB_PASSWORD
#    - Change ADMIN_PASSWORD from default to a strong password
#    - Update ADMIN_EMAIL to actual admin email
#    - Update CORS_ORIGINS to match your domain
#    - Set DEBUG=False in production
#
# 2. SSL/HTTPS:
#    - Configure SSL certificates in nginx or reverse proxy
#    - Update VITE_API_URL to use https://
#    - Update CORS_ORIGINS to use https://
#
# 3. DATABASE:
#    - Consider using managed PostgreSQL service
#    - Setup regular backups
#    - Use strong password
#
# 4. MONITORING:
#    - Configure Sentry for error tracking
#    - Enable Prometheus metrics
#    - Setup log aggregation
#
# 5. SCALING:
#    - Adjust backend workers in docker-compose.prod.yml
#    - Configure Redis for distributed rate limiting
#    - Use load balancer for multiple instances
#
