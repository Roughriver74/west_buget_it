# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Build argument for API URL
ARG VITE_API_URL=https://budget-acme.shknv.ru
ENV VITE_API_URL=$VITE_API_URL

# Copy source code (AFTER setting build args to prevent cache invalidation)
COPY . .

# Clean any existing dist/ and cache AFTER copying to ensure truly fresh build
RUN rm -rf dist node_modules/.vite .cache

# Build application
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built assets from builder
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy custom nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy runtime configuration script
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Expose port
EXPOSE 80

# Health check (use IPv4 explicitly to avoid IPv6 issues)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://127.0.0.1/ || exit 1

# Use custom entrypoint for runtime configuration
ENTRYPOINT ["/docker-entrypoint.sh"]
